# coding: utf-8
<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
  <div id="headerArea">
    <div class="header_txt"><h1>侍エンジニア塾H1タグ</h1></div>
    <div class="header_logo"><%= link_to image_tag('logo.gif',:size => '200x40'),'/' %></div>

    <div id="gnavi">
      <ul id="globalnavi">
      <li><%= link_to 'Home', posts_path %></li>
      <li><%= link_to '新規投稿', new_post_path %></li>
      <li><%= link_to '日別アーカイブ', day_path %></li>
      </ul>
    </div><!-- end div#gnavi -->

  </div><!-- end div#headerArea -->
  </div><!-- end div#header -->

  <div id="content" class="floatwrap">
  <div id="contentArea" class="floatwrap">

  <div id="side" class="floatwrap">
  <p>sidebar</p>
  </div><!-- end div#side -->

  <div id="main" class="floatwrap">
    <div id="notice"><%= notice %></div>
    <div id="alert"><%= alert %></div>

    <%= yield %>
  
  </div><!-- end div#main -->


  </div><!-- end div#contentArea -->
  </div><!-- end div#content -->

  <div id="footer">
  <div id="footerArea">

  <div class="footer_navi">
  <ul>
      <li><%= link_to 'Home', posts_path %></li>
      <li><%= link_to '新規投稿', new_post_path %></li>
      <li><%= link_to '日別アーカイブ', day_path %></li>
  </ul>
  </div>

  </div><!-- end div#footerArea -->
  </div><!-- end div#footer -->
</body>
</html>
