<h2>カテゴリー</h2>

<p class="bbold16">登録数:
<%= @categories.size %></p>
<p><%= paginate @post %></p>

<div id="news">
  <ul>
    <% @post_categories.each do |category,posts| %>
      <% if category.nil? %>
        <% postcat = "カテゴリ未登録" %>
      <% else %>
        <% postcat = Category.find(:all,:conditions => {:id => category }, :select => 'name') %>
        <% for entry in postcat %>
          <% postcat = h(entry.name) %>
        <% end %>
      <% end %>

      <li>
        <a href="/cat_list/<%= category %>"><%= postcat %></a>(<%= posts.count %>)
      </li>
    <% end %>
  </ul>
</div>
